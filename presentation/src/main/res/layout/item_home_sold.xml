<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp" >

    <View
        android:id="@+id/view_empty"
        android:layout_width="70dp"
        android:layout_height="110dp"
        android:background="@color/gray_0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view_filled"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:background="@color/orange_002"
        app:layout_constraintBottom_toBottomOf="@id/view_empty"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view_filled"
        android:layout_marginTop="5dp"
        android:text="Pommes cannelles"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/view_empty"
        app:layout_constraintEnd_toEndOf="@id/view_filled" />




</androidx.constraintlayout.widget.ConstraintLayout>